<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CenterActivity">

    <!--    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"

            >

        </androidx.appcompat.widget.Toolbar>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/btn_info_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_button_round"
            android:text="@string/text_btn_info_exit" />

        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <FrameLayout
                    android:id="@+id/ll_picture"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"

                    >

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="96dp"
                        android:layout_height="97dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/page2" />


                </FrameLayout>

                <Button
                    android:id="@+id/btn_edit_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/ll_picture"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_button_round"
                    android:text="@string/text_btn_edit_info" />

                <TextView
                    android:id="@+id/tv_info_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btn_edit_info"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="25dp"
                    android:text="@string/hint_et_info_nickname"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/et_info_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_info_nickname"
                    android:layout_toRightOf="@id/tv_info_nickname" />

                <TextView
                    android:id="@+id/tv_info_sex"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_info_nickname"
                    android:layout_marginBottom="25dp"
                    android:text="@string/hint_et_info_sex"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_info_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_info_sex"
                    android:layout_toRightOf="@id/tv_info_sex" />

                <TextView
                    android:id="@+id/tv_info_age"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_info_sex"
                    android:layout_marginBottom="25dp"
                    android:text="@string/hint_et_info_age"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_info_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_info_age"
                    android:layout_toRightOf="@id/tv_info_age" />

                <TextView
                    android:id="@+id/tv_info_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_info_age"

                    android:layout_marginBottom="25dp"
                    android:text="@string/hint_et_info_desc"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_info_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/tv_info_desc"
                    android:layout_toRightOf="@id/tv_info_desc" />

                <Button
                    android:id="@+id/btn_info_update"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_info_desc"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_button_round"
                    android:text="@string/text_btn_info_update"

                    />
            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>
</LinearLayout>